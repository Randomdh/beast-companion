{
  "name": "beast-companion",
  "version": "0.1.0",
  "description": "Personal AI assistant for AKCB collectors - OpenClaw plugin",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "openclaw": {
    "extensions": {
      "beast-companion": {
        "type": "plugin",
        "entry": "./dist/index.js",
        "config": "./openclaw.plugin.json"
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "openclaw",
    "nft",
    "akcb",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "@openclaw/plugin-sdk": "*"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
